# Worker Configuration Example
# Copy this file to config.yaml and modify the values

# Vercel API settings
vercel_api_url: "https://your-vercel-app.vercel.app/api"
worker_token: "your-secret-worker-token"

# Worker identification
worker_id: "gpu-worker-001"

# Polling settings
polling_interval: 5  # seconds to wait when no task is available
api_timeout: 30  # seconds for API requests
lease_duration: 1800  # 30 minutes - how long worker holds a task

# Paths (adjust based on your installation)
wan_repo_path: "./Wan2.2"
model_path: "./Wan2.2/Wan2.2-TI2V-5B"
temp_dir: "./temp"
log_dir: "./logs"

# Inference settings
task_type: "ti2v-5B"
video_size: "1280*704"  # Output video size. Wan2.2 automatically adjusts input image to this size
frame_num: 81  # 4n+1
sample_solver: "unipc"
sample_steps: 30
cfg_scale: 5.0

# Retry settings
max_retries: 3
retry_delay: 5  # seconds

# Cleanup
auto_cleanup_temp: true
